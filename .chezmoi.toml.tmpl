[add]
    secrets = "error"

[git]
    autoCommit = true
    # autoPush = true

[diff]
command = "delta"
pager = "delta"

[[textconv]]
pattern = "**/*.plist"
command = "plutil"
args = ["-convert", "xml1", "-o", "-", "-"]


[merge]
# Use VS-Code as a diff editor
command = "bash"
args = [
    "-c",
    "cp {{ "{{ .Target }} {{ .Target }}.base && code --new-window --wait --merge {{ .Destination }} {{ .Target }} {{ .Target }}.base {{ .Source }}" }}",
]

